# Application
APP_ENV=dev
APP_DEBUG=1
APP_SECRET=change_me_in_.env.local

# Database (Symfony app)
DATABASE_URL=mariadb://user:password@localhost:3306/corbidev_auth

# Session / Cookies
SESSION_COOKIE_DOMAIN=.corbisier.fr
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=none

# OIDC / Keycloak
# Issuer base URL (realm-specific), e.g. https://auth.dev-corbisier.fr/realms/myrealm
OIDC_ISSUER=
# Authorization endpoint, e.g. https://auth.dev-corbisier.fr/realms/myrealm/protocol/openid-connect/auth
AUTHORIZATION_ENDPOINT=
# Token endpoint, e.g. https://auth.dev-corbisier.fr/realms/myrealm/protocol/openid-connect/token
TOKEN_ENDPOINT=
# JWKS URI, e.g. https://auth.dev-corbisier.fr/realms/myrealm/protocol/openid-connect/certs
JWKS_URI=
# UserInfo endpoint (optional), e.g. https://auth.dev-corbisier.fr/realms/myrealm/protocol/openid-connect/userinfo
USERINFO_ENDPOINT=

# OIDC Client
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=https://app.dev-corbisier.fr/oidc/callback
OIDC_SCOPES=openid email profile

# JWT (if using LexikJWT for internal APIs)
JWT_PASSPHRASE=change_me

# Mailer (for verification emails)
MAILER_DSN=smtp://localhost:1025

# ===============================
# Auth-Env â€” .env (Docker Compose)
# ===============================

# DB (Docker)
DB_NAME=auth_env
DB_USER=auth_user
DB_PASS=password
DB_ROOT_PASS=passw@rd