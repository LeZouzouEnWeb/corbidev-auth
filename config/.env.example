# ===============================
# Auth-Env — .env (exemple)
# ===============================

# App
APP_ENV=dev
APP_DEBUG=1
APP_NAME=auth-env

# Security / Cookies
COOKIE_SECURE=1
COOKIE_HTTPONLY=1
COOKIE_SAMESITE=Strict

# DB (si utilisé)
DB_DSN=mysql:host=localhost;port=3306;dbname=auth_env;charset=utf8mb4
DB_USER=auth_user
DB_PASS=change-me

# JWT
JWT_SECRET=change-me
JWT_TTL=3600
JWT_ISS=auth-env
JWT_AUD=corbisier-apps

# CORS
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With
