{% set role = (user.role|default(''))|upper %}
{% set is_logged_in = role is not empty %}

<!-- Navbar (hamburger on mobile) -->
<nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
  <div class="container">
    <a class="navbar-brand" href="/">
      {% if role is not empty %}
        <span class="badge bg-primary">Rôle : {{ role }}</span>
      {% endif %}
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
            aria-controls="mainNav" aria-expanded="false" aria-label="Basculer la navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class="nav-link active" aria-current="page" href="/">Accueil</a></li>
        {% if is_logged_in %}
          <li class="nav-item"><a class="nav-link" href="/account">Mon compte</a></li>
           {% else %}
        <li class="nav-item"><a class="nav-link" href="/login">Connexion</a></li>
        {% endif %}
        {% if role in ['ADMIN', 'WEBMASTER'] %}
          <li class="nav-item"><a class="nav-link" href="/users">Gestion des utilisateurs</a></li>
        {% endif %}
      </ul>
      {% if is_logged_in %}
        <form id="logoutFormNav" class="d-flex" role="search" action="/logout" method="post">
          <button class="btn btn-outline-light" type="submit">Se déconnecter</button>
        </form>
      {% endif %}
    </div>
  </div>

</nav>
