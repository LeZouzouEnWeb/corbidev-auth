{% extends 'base.html.twig' %}

{% block title %}Déconnexion · {{ parent() }}{% endblock %}

{% block content %}
  <section class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="alert alert-info">
          Déconnecté. Redirection en cours…
        </div>
        <noscript>
          <div class="alert alert-warning">JavaScript est requis pour finaliser la déconnexion.</div>
        </noscript>
      </div>
    </div>
  </section>
  <script>
    try {
      const key = {{ cookie_name|default('auth_key')|json_encode|raw }};
      localStorage.removeItem(key);
      localStorage.removeItem(key + '_ts');
    } catch (e) {
      console.error('Impossible de supprimer la clé localStorage:', e);
    }
    setTimeout(function(){ window.location.assign({{ redirect_to|default('/')|json_encode|raw }}); }, 50);
  </script>
{% endblock %}
